# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Model (default: gpt-5-mini)
OPENAI_MODEL=gpt-5-mini

# UI Configuration
# Set to false to hide the API Key input in the Streamlit UI
SHOW_API_CONFIG_UI=true

# Resume Configuration
# single page: 200 words. two-pages: 400-500 words
TARGET_RESUME_WORDS=400

# Agents Configuration
ENABLE_REPORTS=true
ENABLE_FACT_CHECK=false

# Resume Configuration
INCLUDE_SUMMARY=true
DEFAULT_RESUME_LANGUAGE="English"

# Developer Mode (if true, simulates crew execution instead of running actual agents)
DEVELOPER_MODE=false

# Custom Header Override
HEADER_OVERRIDE_DEFAULT=false

# Pre-defined Header Items (Optional)
# You can define up to 20 items (HEADER_1_..., HEADER_2_..., etc.)
# HEADER_1_PREFIX="LinkedIn: "
# HEADER_1_TEXT="your-username"
# HEADER_1_URL="https://www.linkedin.com/in/your-username/"
# HEADER_2_PREFIX="GitHub: "
# HEADER_2_TEXT="your-username"
# HEADER_2_URL="https://github.com/your-username"